<form action="#" method="post">
  <fieldset class="column-left">
    <p>
      <label for="servername">Servername</label>
      <input class="text-input medium-input" type="text" id="servername" name="servername" value="{{ server.servername }}" />
      <br /><small>This information is just visual, it doesn't match the reverse of the server.</small>
    </p>

    <p>
      <label for="ip">IP address</label>
      <input class="text-input small-input" type="text" id="ip" name="ip" value="{{ server.ip }}" /> <span class="input-notification error png_bg">Invalid format (xxx.xxx.xxx.xxx)</span>
    </p>

    <p>
      <label for="protocol">Protocol to get informations</label>
      <select name="protocol" id="protocol" class="small-input">
        <option value="0">SNMP</option>
        <option value="1">SSH</option>
        <option value="2">HTTP</option>
      </select> 
    </p>

    <p>
      <label for="user">User</label>
      <input class="text-input small-input" type="text" id="user" name="user" />
      <br /><small>A small description of the field</small>
    </p>

    <p>
      <label for="password">Password</label>
      <input class="text-input small-input" type="text" id="password" name="password" />
      <br /><small>A small description of the field</small>
    </p>

    <p>
      <input class="button" type="submit" value="Submit" />
    </p>

  </fieldset>
  <fieldset class="column-right">
    <p>
      <label>Software to monitor</label>
      <label for="ftp"><input type="checkbox" name="ftp" id="ftp" value="" /> FTP <small>(port 21)</small></label>
      <label for="ssh"><input type="checkbox" name="ssh" id="ssh" value="" /> SSH <small>(port 22)</small></label>
      <label for="dns"><input type="checkbox" name="dns" id="dns" value="" /> DNS <small>(port 53)</small></label>
      <label for="http"><input type="checkbox" name="http" id="http" value="" /> HTTP <small>(port 80)</small></label>
      <label for="smtp"><input type="checkbox" name="smtp" id="smtp" value="" /> SMTP <small>(port 25)</small></label>
      <label for="pop"><input type="checkbox" name="pop" id="pop" value="" /> POP <small>(port 110)</small></label>
      <label for="imap"><input type="checkbox" name="imap" id="imap" value="" /> IMAP <small>(port 143)</small></label>
    </p>
  </fieldset>

  <div class="clear"></div><!-- End .clear -->
</form>



