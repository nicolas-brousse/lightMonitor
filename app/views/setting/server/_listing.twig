<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>IP</th>
      <th>Protocol</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <td colspan="7">
        <div class="pagination">
          <a href="#" title="Previous Page">&laquo; Previous</a>
          <a href="#" class="number current" title="1">1</a>
          <a href="#" title="Next Page">Next &raquo;</a>
        </div> <!-- End .pagination -->
        <div class="clear"></div>
      </td>
    </tr>
  </tfoot>

  <tbody>
    {% for server in servers %}
      <tr>
        <td>{{ server.servername|e }}</td>
        <td>{{ server.ip|e }}</td>
        <td>{{ server.protocol|e }}</td>
        <td>{{ server.created_at|date("d-m-Y H:m:s") }}</td>
        <td>{{ server.updated_at|date("d-m-Y H:m:s") }}</td>
        <td>
           <!-- Icons -->
           <a href="{{ app.url_generator.generate('settings.servers.edit', {'ip': server.ip}) }}" title="Edit"><img src="{{ app.request.getBaseUrl() }}/img/icons/pencil.png" alt="Edit" /></a>
           <a href="{{ app.url_generator.generate('settings.servers.delete', {'ip': server.ip}) }}" title="Delete"><img src="{{ app.request.getBaseUrl() }}/img/icons/cross.png" alt="Delete" /></a>
         </td>
      </tr>
    {% endfor %}
  </tbody>
</table>